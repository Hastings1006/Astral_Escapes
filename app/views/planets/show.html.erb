<div class="container mb-4">
  <div class="card-trip-show">
    <%= image_tag @planet.planet_img %>
    <div class="card-trip-infos-show">
      <div>
        <h1><%=@planet.name%></h1>
      </div>
      <h2 class="card-trip-pricing-show"><span>$<%=@planet.price_per_night%></span> per night</h2>
    </div>
    <div class="card-trip-infos-show">
        <p><%=@planet.details %></p>
        <p>Star system - <%=@planet.location%></p>
    </div>

    <div class="d-flex justify-content-around mb-4">
      <%= link_to "Book this planet", new_planet_booking_path(@planet), class: "btn btn-flat rounded-pill px-4 py-2" %>
      <%=link_to "Back to all planets", planets_path, class: "btn btn-flat rounded-pill px-4 py-2" %>
    </div>
  </div>
</div>
